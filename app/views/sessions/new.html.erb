 <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

<div class="row">
  <div class="col-sm-4">
    <%= form_tag sessions_path ,class:"form-signin", method: "post" do %>
      <div class="form-group">
        <input type="text" name="username" placeholder="Username" class="form-control" id="form_username" title="用户名6-12个字符">
      </div>
      <div class="form-group">
        <input type="password" name="password" placeholder="Password" class="form-control" id="form_password">
      </div>
      <input type="submit" class="btn btn-st btn-primary btn-block" value="登录" /> 
      <%= link_to "注册", new_user_path %>
    <% end %>
  </div>
  <div class="col-sm-8">
  </div>
</div>