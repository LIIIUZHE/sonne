<h3>Blog List</h3>
<br>
<div>
<%= link_to "create blog", new_blog_path, class: "btn btn-outline-success my-2 my-sm-0" %>
<%
    if  session[:user_id]
    def current_user 
      @current_user= User.find(session[:user_id])
    end 

    %>
<%= link_to "my blog", blogs_user_path(current_user), class: "btn btn-outline-success my-2 my-sm-0" %>
  <% end -%>
</div>
<br>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped table-sm">
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>author</th>
      </tr>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.id %></td>
          <td>
            <%= link_to blog.title,blog_path(blog) ,class:"p-2 text-dark" %>
          </td>
          <td><%= blog.user.username %></td>
        </tr>
      <% end -%>
    </table>

    <%= will_paginate @blogs %>
  </div>
</div>